<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:gravity="center"
        android:text="Stani Terminator"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/motivationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#E3F2FD"
        android:gravity="center"
        android:padding="16dp"
        android:text="Loading motivation..."
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnCardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Start Cardio Workout"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnStrength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Start Strength Workout"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        android:text="My Workouts"
        android:textSize="18sp" />
</LinearLayout>
