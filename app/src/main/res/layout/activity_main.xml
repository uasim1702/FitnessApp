<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stani Terminator "
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/motivationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading motivation..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnCardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏃 Start Cardio Workout"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnStrength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Strength Workout"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Workout History"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#4CAF50" />
</LinearLayout>
